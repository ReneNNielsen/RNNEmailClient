<UserControl x:Class="RNNEmailClient.FolderMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200" Loaded="UserControl_Loaded">
    <TreeView>
        <TreeViewItem Name="headerTreeItem">
            <TreeViewItem.Header>
                <StackPanel Orientation="Horizontal">
                    <Image Source="imgIcons/folder.jpg" Height="22" />
                    <Label Name="emailName" />
                </StackPanel>
            </TreeViewItem.Header>
        </TreeViewItem>
    </TreeView>
</UserControl>
